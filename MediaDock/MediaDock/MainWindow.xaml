<Window x:Class="MediaDock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaDock"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <!-- Media Controls Row -->
        <Button Click="MediaPrevious" Grid.Column="0" Grid.Row="0">Previous</Button>
        <Button Click="MediaPlayPause" Grid.Column="1" Grid.Row="0">Play/Pause</Button>
        <Button Click="MediaNext" Grid.Column="2" Grid.Row="0">Next</Button>
        <!-- Volume Controls Row-->
    </Grid>
</Window>
